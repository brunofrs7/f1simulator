<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DadosPilotoActivity">

    <ImageView
        android:id="@+id/iv_dadosPiloto_foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/et_dadosPiloto_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:hint="Nome do piloto" />

    <EditText
        android:id="@+id/et_dadosPiloto_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:hint="NÃºmero do piloto"
        android:inputType="number" />


    <EditText
        android:id="@+id/et_dadosPiloto_nacionalidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:hint="Nacionalidade do piloto" />


    <EditText
        android:id="@+id/et_dadosPiloto_idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:hint="Idade do piloto"
        android:inputType="number" />


    <EditText
        android:id="@+id/et_dadosPiloto_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:hint="Valor do piloto"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/et_dadosPiloto_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="center"
        android:hint="Email do piloto"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_dadosPiloto_editar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/editar" />

        <Button
            android:id="@+id/bt_dadosPiloto_eliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/eliminar" />
    </LinearLayout>

</LinearLayout>